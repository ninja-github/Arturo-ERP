{% extends '::base.html.twig' %}

{% block body -%}
    <h1>BackCountries</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ entity.code }}</td>
            </tr>
            <tr>
                <th>Latitude</th>
                <td>{{ entity.latitude }}</td>
            </tr>
            <tr>
                <th>Longitude</th>
                <td>{{ entity.longitude }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ entity.address }}</td>
            </tr>
            <tr>
                <th>Zoom</th>
                <td>{{ entity.zoom }}</td>
            </tr>
            <tr>
                <th>Catalog</th>
                <td>{{ entity.catalog }}</td>
            </tr>
            <tr>
                <th>Email</th>
