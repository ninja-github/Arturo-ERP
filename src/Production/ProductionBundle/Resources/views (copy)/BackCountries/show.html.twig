        <ul class="record_actions">
    <li>
        <a href="{{ path('backcountries') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('backcountries_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('backcountries_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
