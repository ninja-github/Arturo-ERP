{% extends '::base.html.twig' %}

{% block body -%}
<h1>Supplier list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Name</th>
            <th>Developing</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('prodproviders_show', { 'id': entity.id }) }}">{{ entity.name }}</a></td>
                <td>{{ entity.getBackModels }}</td>
                <td>
                    <ul>
                        <li>
                            <form action="{{ path('prodproviders_delete', { 'id': entity.id }) }}" method="post">
                                <input type="hidden" name="_method" value="DELETE" />
                                {{ form_widget(entity.delete_form) }}
                                <button type="submit">Delete</button>
                            </form>
                        </li>
                        <li>
                            <a href="{{ path('prodproviders_edit', { 'id': entity.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('prodproviders_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
